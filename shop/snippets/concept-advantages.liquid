<style type="text/css">

.concept__heading {
	overflow: hidden;
}
@media (min-width: 600px) {

	#section--{{ section.id }} .concept__advantages-title{
		transform: translateX({{ section.settings.title_position}}%);
		font-size: {{ section.settings.title_size }}em;
		margin-bottom: 0;
	}

	#section--{{ section.id }} .concept__advantages-subtitle{
		transform: translateX({{ section.settings.subtitle_position}}%);
		font-size: {{ section.settings.subtitle_size }}em;
		margin-bottom: 15px;
	}
}
/* comentaire */
</style>
{% if section.settings.isActive %}
<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="concept" class="concept-section gutter-section" title="concept-advantages">
	<div class="concept__heading align-center">
		<h1 class="u-h1 concept__advantages-title Heading {% if section.settings.font_option == true %} phreaks {% endif %}">{{ section.settings.title }}</h1>
		<h3 class="u-h3 concept__advantages-subtitle Heading aling {% if section.settings.font_option_subtitle == true %} phreaks {% endif %}">{{ section.settings.subtitle }}</h3>

		{% if section.settings.description %}
		<div class="concept__advantages-description u-h5">
			{{ section.settings.description }}
		</div>
		{% endif %}
	</div>
	<div class="concept__advantages-content align-center">
		<div class="grid">
			{% for block in section.blocks %}
			<div class="grid__cell 1/1 1/3--lap-and-up">
				<div class="concept__image-container">
					{% include 'image' with img : block.settings.image, class:'image__width' %}
				</div>
				<div class="concept__content ">
					<h3 class="Heading concept__content-title">{{ block.settings.title }}</h3>
					<p>{{ block.settings.content }}</p>
					{% if block.settings.link != blank %}
					<a href="{{ block.settings.url }}" target="_blank" class="Heading"> <b>{{ block.settings.link }}</b></a>
					{% endif %}
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
{% endif %}
