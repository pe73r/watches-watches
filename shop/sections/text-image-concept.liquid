{% include 'text-image-offset' %}

{% schema %}
{
  "name": "Text-image-concept",
  "settings": [
    {
      "type": "select",
      "id": "image_width",
      "label": "image size",
      "options": [
        {
          "value": "2/3",
          "label": "Two/thirds"
        },
        {
          "value": "1/2",
          "label": "Half"
        },
        {
          "value": "3/4",
          "label": "Three/Quarters"
        }
      ],
      "default": "1/2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1500 x 800px .jpg recommended"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image",
      "info": "400 x 500px .jpg recommended"
    },
     {
      "type": "checkbox",
      "id": "font_option",
      "label": "Special font",
      "info": "change the font of the title",
      "default": false
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
    "type":      "range",
    "id":        "title_position",
    "min":       0,
    "max":       200,
    "step":       2,
    "unit":       "%",
    "label":     "Title position",
    "default":   0
    },
    {
    "type":      "range",
    "id":        "title_size",
    "min":       2,
    "max":       8,
    "step":      1,
    "unit":      "em",
    "label":     "Title size",
    "default":   4
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle",
      "default": "subtitle"
    },
    {
    "type":      "range",
    "id":        "subtitle_size",
    "min":       2,
    "max":       6,
    "step":      1,
    "unit":      "em",
    "label":     "Subtitle size",
    "default":   2
    },
     {
    "type":      "range",
    "id":        "subtitle_size_mobile",
    "min":       2,
    "max":       6,
    "step":      1,
    "unit":      "em",
    "label":     "Subtitle size Mobile",
    "default":   2
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>A short sentence describing this section</p>"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "middle",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "middle"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text align",
      "options": [
        {
          "value": "align-right",
          "label": "Right"
        },
        {
          "value": "align-left",
          "label": "Left"
        },
        {
          "value": "align-center",
          "label": "Center"
        }
      ],
      "default": "align-left"
    },
    {
       "type":      "checkbox",
       "id":        "form_status",
       "label":     "Display a form",
       "default":   false
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "button_size",
      "default": "100",
      "options": [
        {
          "value": "100",
          "label": "full width"
        },
        {
          "value": "50",
          "label": "half width"
        }
      ]
    },
    {
      "type": "select",
      "id": "block_position",
      "label": "block position",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "right",
          "label": "right"
        }
      ]
    }
  ]
}
{% endschema %}
